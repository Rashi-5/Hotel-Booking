@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
    background-image: url('/images/db.jpg'); 
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        min-height: 100vh;
    }
</style>

    <div class="container mt-5 text-center">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <img src="/images/logo.png" alt="Hotel Logo" style="max-width: 120px;" class="mb-4" />

                <h1 class="display-4 mb-3" style='color: black; font-weight: bold;'>Welcome to Your Personal Hotel Booking System</h1>
                <p class="lead" style='color: black; font-weight: bold;'>Manage room availability, handle guest bookings, and generate reports — all from one place.</p>

                <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="background-color:rgba(1, 47, 29, 0.5); border-radius: 1rem; border: 1px solid #012F1D;">
                <div class="card-body">
                    <h5 class="card-title" style="color: white;">🏨 Manage Rooms</h5>
                    <p class="card-text" style="color: white;">Add or update room types, amenities, and pricing.</p>
                    <a href="/Admin/Privacy" 
                    style="background-color: #012F1D; color: white; border: none; padding: 8px 16px; border-radius: 0.5rem; text-decoration: none; display: inline-block;">
                    Go
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="background-color:rgba(213, 226, 238, 0.5); border-radius: 1rem; border: 1px solid #D5E2EE;">
                <div class="card-body">
                    <h5 class="card-title">📅 Book Now</h5>
                    <p class="card-text">Make a new booking or view available rooms.</p>
                    <a href="/User/Login"
                    style="background-color:rgba(213, 226, 238, 0.78); color: black; border: none; padding: 8px 16px; border-radius: 0.5rem; text-decoration: none; display: inline-block;">
                    Book
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="background-color:rgba(155, 127, 109, 0.5); border-radius: 1rem; border: 1px solid #9B7F6D;">
                <div class="card-body">
                    <h5 class="card-title">📈 View Reports</h5>
                    <p class="card-text">Generate weekly or predictive booking reports.</p>
                    <a href="/User/Login"
                    style="background-color: #9B7F6D; color: black; border: none; padding: 8px 16px; border-radius: 0.5rem; text-decoration: none; display: inline-block;">
                    Reports
                    </a>
                </div>
            </div>
        </div>
    </div>


            <div class="mt-5">
                @await Html.PartialAsync("_ChatMessage", null)
            </div>
        </div>
    </div>
</div>
