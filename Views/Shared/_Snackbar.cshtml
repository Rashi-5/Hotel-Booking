@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
@if (!string.IsNullOrEmpty(success) || !string.IsNullOrEmpty(error))
{
    <div id="snackbar" class="snackbar @(success != null ? "snackbar-success" : "snackbar-error")">
        @success @error
    </div>
    <script>
        window.onload = function() {
            var x = document.getElementById("snackbar");
            x.classList.add("show");
            setTimeout(function(){ x.classList.remove("show"); }, 4000);
        }
    </script>
    <style>
        .snackbar {
            visibility: hidden;
            min-width: 250px;
            margin-left: -125px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 8px;
            padding: 16px;
            position: fixed;
            z-index: 9999;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
            opacity: 0;
            transition: opacity 0.5s, visibility 0.5s;
        }
        .snackbar.show {
            visibility: visible;
            opacity: 1;
        }
        .snackbar-success {
            background-color: #28a745;
        }
        .snackbar-error {
            background-color: #dc3545;
        }
    </style>
} 