@model HotelBookingSystem.Models.UserModel
@{
    ViewData["Title"] = "User Registration";
}

<div class="register-page">
    <div class="split-div">  
    <div style="width: 100%">
        <img src="/images/bg.jpg" alt="Hotel Logo" style="width: 100%; height: 100vh;" class="mb-4" />
    </div> 
    <div class="side-div">
    <h2 class="register-title">User Registration</h2>

    <form asp-action="Register" method="post" class="register-form">
        <div class="form-group">
            <label>Username</label>
            <input asp-for="Username" />
            <span asp-validation-for="Username" class="error-text"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="error-text"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="error-text"></span>
        </div>
        <button type="submit">Register</button>
    </form>

    <span style="color: #3e3e3e; text-align: center; display: flex; justify-content: center; padding: 24px;">
        Already have an account? <a href="/User/Login" style="color:rgb(0, 0, 0); text-decoration: underline; margin-left: 5px;">Sign In</a>
    </span>
         </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <p style="color:green;">@TempData["Success"]</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 