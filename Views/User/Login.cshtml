@{
    ViewData["Title"] = "User Login";
}

<div class="register-page">
<h2 class="register-title">User Login</h2>

<form asp-action="Login" method="post" class="register-form">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Login</button>

    @if (TempData["Error"] != null)
    {
        <p class="error-message">@TempData["Error"]</p>
    }
</form>
    <span style="color: white; text-align: center; display: flex; justify-content: center; padding: 24px;">
        Don't have an account? <a href="/User/Register" style="color:rgb(0, 255, 110); text-decoration: underline; margin-left: 5px;">Sign Up</a>
    </span>
</div>
@if (TempData["Error"] != null)
{
    <p style="color:red;">@TempData["Error"]</p>
} 