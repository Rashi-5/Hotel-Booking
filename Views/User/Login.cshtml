@{
    ViewData["Title"] = "User Login";
}

<div class="register-page">
    <div class="split-div">  
    <div style="width: 100%">
        <img src="/images/body.jpg" alt="Hotel Logo" style="width: 100%; height: 100vh;" class="mb-4" />
    </div> 
    <div class="side-div">
<h2 class="register-title">User Login</h2>

<form asp-action="Login" method="post" class="register-form">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Login</button>

    @if (TempData["Error"] != null)
    {
        <p class="error-message">@TempData["Error"]</p>
    }
</form>
    <span style="color: #3e3e3e; text-align: center; display: flex; justify-content: center; padding: 24px;">
        Don't have an account? <a href="/User/Register" style="color:rgb(0, 0, 0);; text-decoration: underline; margin-left: 5px;">Sign Up</a>
    </span>
     </div>
    </div>
</div>
@if (TempData["Error"] != null)
{
    <p style="color:red;">@TempData["Error"]</p>
} 